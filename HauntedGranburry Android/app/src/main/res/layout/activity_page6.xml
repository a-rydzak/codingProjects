<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.example.brobofett.hauntedgranburry_2.Page6Activity">

    <!--Title View-->
    <TextView
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:autoText="false"
        android:background="#191919"
        android:ems="10"
        android:gravity="center"
        android:text="@string/page5_title"
        android:textColor="@color/allTextColor"
        android:textSize="22sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--Start view flipper for pictures.-->
    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText">

        <ImageButton
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:scaleType="fitXY"
            android:src="@drawable/opera"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

        <ImageButton
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:scaleType="fitXY"
            android:src="@mipmap/opera1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

        <ImageButton
            android:id="@+id/img3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:scaleType="fitXY"
            android:src="@mipmap/opera2"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />


    </ViewFlipper>

    <!--Start of seekbar, play/pause and time remaining display-->

    <SeekBar
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/seekBarBackground"
        android:progressDrawable="@drawable/seekbar"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/tt"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:background="@color/seekBarBackground"
        android:gravity="center"
        android:paddingBottom="0dp"
        android:text="Time Remaining"
        android:textColor="@color/allTextColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintLeft_toLeftOf="parent" />


    <ImageButton
        android:id="@+id/button"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="#000"
        android:scaleType="fitCenter"
        android:src="@mipmap/play"
        app:layout_constraintBottom_toTopOf="@+id/tt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <!--Start of text view for history/ghost story display-->
    <ScrollView
        android:id="@+id/scrollView2"
        android:background="#000"
        android:layout_width="0dp"
        android:layout_height="270dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="10dp"

        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/text2"
            android:background="#191919"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:linksClickable="true"
            android:paddingLeft="5dp"
            android:layout_height="match_parent"
            android:textColor="@color/allTextColor"
            android:text="@string/page5_text"/>

    </ScrollView>

</android.support.constraint.ConstraintLayout>